doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav 
      block header 
        ul 
          li 
            a(href='/') Home
          li 
            a(href='/messageboard') MessageBoard
          if currentUser
            if currentUser.membership_status=='Public'
              li 
                a(href='/membership/private') Become a Private Member
            else if currentUser.membership_status=='Private'
              li 
                a(href='/membership/admin') Become an Admin
            li 
              a(href='/log_out') Log Out 
          else 
            li
              a(href='/login') Login 
            li 
              a(href='/sign_up') Sign Up
      block content
